#version 430

// local size is defined in shader
layout(local_size_x=256, local_size_y=1, local_size_z=1) in;

// bind a buffer to the shader
layout (binding=0) buffer Vector
{
	float element[];
};

void main()
{
	uint id = gl_GlobalInvocationID.x;
	for (int i = 0; i < 1000; i++)
		element[id] = id;
}
