#version 430

// local size is defined in shader
layout(local_size_x=256, local_size_y=1, local_size_z=1) in;

// bind two buffers to the shader
layout (binding=0) buffer a1
{
	double inp[];
};

layout (binding=1) buffer a2
{
	double outp[];
};

void main()
{
	uint id = gl_GlobalInvocationID.x;
	outp[id] += 1.0;//inp[id] * 2;
}
